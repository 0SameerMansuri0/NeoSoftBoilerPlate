@model IEnumerable<MovieRentalApp.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="row mb-3">
    <div class="col-md-3">
        <form method="get" action="@Url.Action("Index")">
            <label for="categoryFilter" class="form-label">Filter by MovieCategory:</label>
            <select id="categoryFilter" name="categoryFilter" class="form-select bg-dark text-white">
                <option value="">All</option>
                <option value="Category 1">Category 1</option>
                <option value="Category 2">Category 2</option>
                <option value="Category 3">Category 3</option>
            </select>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</div>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@movie.ImagePath" alt="Card image cap">
                <div class="card-body">
                    <h2 class="card-title">@movie.MovieName</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Category:</h6>
                            <p class="card-text">@movie.MovieCategory</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Director Name:</h6>
                            <p class="card-text">@movie.DirectorName</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Actor Name:</h6>
                            <p class="card-text">@movie.ActorName</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Rent Price:</h6>
                            <p class="card-text rent-price">@movie.MovieRentPrice</p>
                        </div>
                    </div>
                    <a href="@Url.Action("BookMovie", new { id = movie.MovieId })" class="btn btn-primary">BOOK</a>
                </div>
            </div>
        </div>
    }
</div>
